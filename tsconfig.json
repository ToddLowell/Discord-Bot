{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
